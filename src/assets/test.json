{
    "pages": [
        {
            "pageId": "home",
            "title": "Home Page",
            "components": [
                {
                    "type": "header",
                    "properties": {
                        "text": "Welcome to Our Homepage",
                        "cssClass": "main-header"
                    }
                },
                {
                    "type": "paragraph",
                    "properties": {
                        "text": "Here is some introduction about our company.",
                        "cssClass": "intro-paragraph"
                    }
                },
                {
                    "type": "image",
                    "properties": {
                        "src": "/assets/images/home-intro.jpg",
                        "alt": "Intro Image"
                    }
                }
            ]
        },
        {
            "pageId": "contact",
            "title": "Contact Us",
            "components": [
                {
                    "type": "header",
                    "properties": {
                        "text": "Get in Touch with Us",
                        "cssClass": "main-header"
                    }
                },
                {
                    "type": "paragraph",
                    "properties": {
                        "text": "You can contact us via email, phone, or visiting our office.",
                        "cssClass": "contact-info"
                    }
                },
                {
                    "type": "form",
                    "properties": {
                        "action": "/submit-contact",
                        "method": "post",
                        "fields": [
                            {
                                "label": "Your Name",
                                "type": "text",
                                "name": "name",
                                "placeholder": "Enter your name"
                            },
                            {
                                "label": "Your Email",
                                "type": "email",
                                "name": "email",
                                "placeholder": "Enter your email"
                            },
                            {
                                "label": "Your Message",
                                "type": "textarea",
                                "name": "message",
                                "placeholder": "Enter your message"
                            }
                        ],
                        "submitButtonText": "Send Message"
                    }
                }
            ]
        }
    ]
}